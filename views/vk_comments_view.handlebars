{{> main_navigation }}

<section class="section mt-3">
  <div class="container">
    <h2>Comments view</h2>

    <form action="">
      <div class="d-flex flex-column">
        <div class="d-flex flex-row">

        </div>
        <div class="d-flex flex-row">
          <input type="text">
          <input type="submit" value="">
        </div>
      </div>
    </form>

    <hr>
  </div>

  <div class="d-flex flex-column container">

    {{!-- Comment template --}}
    {{#each comments}}
    <div class="d-flex flex-column border mt-3 ml-3 mr-3 mb-0 rounded">
      <div class="d-flex flex-row">
        <div class="d-flex flex-column">
          <a href="/vk/users/details/{{user.id}}">
            <img class="rounded m-2" height="73px"
              src="{{ user.profilePictureUrl }}"
              alt="">
          </a>
          <div class="p-2">
            <a href="/vk/comments/details/{{ uuid }}" class="btn btn-light btn-sm">12.09.23</a>
          </div>
        </div>
        <div class="p-2 border-start">
          {{!-- WARN: 585 chars max! --}}
          <p>{{ text }}</p>
        </div>
      </div>
      <div class="hstack gap-3 border-top p-2">
        <a href="/trends/details/1" class="btn btn-primary btn-sm">Trend 1</a>
        <a href="/trends/details/1" class="btn btn-primary btn-sm">Trend 2</a>
        <a href="/trends/details/1" class="btn btn-primary btn-sm">Trend 3</a>
        <a href="/trends/details/1" class="btn btn-primary btn-sm">Trend 4</a>
      </div>
    </div>
    {{/each}}

    {{!-- Pagination template --}}
    <div class="container d-flex justify-content-center mt-3">
      <nav>
        <ul class="pagination">
          <li class="page-item"><a class="page-link" href="/vk/comments/{{previewPage}}">Previous</a></li>
          <li class="page-item"><a class="page-link" href="#">{{page}} / {{ pages }}</a></li>
          <li class="page-item"><a class="page-link" href="/vk/comments/{{nextPage}}">Next</a></li>
        </ul>
      </nav>
    </div>
</section>