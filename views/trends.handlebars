{{> navbar }}

<section class="section mt-4">
  <div class="container">

    <div class="mt-4">
      {{#each trends}}
      <div class="d-flex justify-content-between mt-4 shadow-sm rounded p-2">
        <div class="p-1">
          <div class="form-check">
            <input class="form-check-input" type="checkbox" value="{{ isActive }}" id="flexCheckDefault">
            <label class="form-check-label" for="flexCheckDefault">
              {{name}}
            </label>
          </div>
        </div>
        <div>
          <a href="/trends/details/{{id}}" class="btn btn-sm btn-light">Overview</a>
        </div>
      </div>
      {{/each}}
    </div>

  </div>
</section>